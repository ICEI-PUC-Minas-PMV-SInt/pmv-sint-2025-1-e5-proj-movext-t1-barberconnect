{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "allowJs": true,  // Permite a utilização de arquivos .js
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "include": [
    "/*.ts",
    "/*.tsx",
    "*.js",  // Inclui arquivos .js
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
